<?xml version="1.0" encoding="UTF-8"?> 
<databaseChangeLog 
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd"> 
 <!--TABLA T_USERS-->                     
    <changeSet author="RQ_DANIEL" id="04082019_0.0.0.1">
        <createTable tableName="t_users">
            <column autoIncrement="true" name="id" type="int">
                <constraints nullable="true" primaryKey="true" unique="true" />
            </column>
            <column name="name" type="VARCHAR(35)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="lastname" type="VARCHAR(35)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="secondname" type="VARCHAR(35)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="username" type="VARCHAR(35)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="password1" type="VARCHAR(35)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="password2" type="VARCHAR(35)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>
<!--TABLE T_TYPES-->      
    <changeSet author="RQ_DANIEL" id="04082019_0.0.0.2">
        <createTable tableName="t_types">
            <column autoIncrement="true" name="id" type="int">
                <constraints nullable="true" primaryKey="true" unique="true"/>
            </column>
            <column name="description" type="VARCHAR(35)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>
<!--TABLE T_SERVICES-->      
    <changeSet author="RQ_DANIEL" id="04082019_0.0.0.3">
        <createTable tableName="t_services">
            <column autoIncrement="true" name="id" type="int">
                <constraints nullable="true" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(35)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="description" type="VARCHAR(300)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="mail" type="VARCHAR(35)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="phone" type="VARCHAR(30)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="ubication" type="VARCHAR(30)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="fk_type" type="int">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="fk_user" type="int">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>
<!--CONSTRAINT FK TYPES_SERVICES-->       
    <changeSet author="RQ_DANIEL" id="04082019_0.0.0.4">
        <addForeignKeyConstraint baseColumnNames="fk_type"
                baseTableName="t_services"
                constraintName="fk_types_services"
                deferrable="true"
                initiallyDeferred="true"
                onDelete="CASCADE"
                onUpdate="RESTRICT"
                referencedColumnNames="id"
                referencedTableName="t_types"/>
    </changeSet>
<!--CONSTRAINT FK USER_SERVICES-->       
    <changeSet author="RQ_DANIEL" id="04082019_0.0.0.5">
        <addForeignKeyConstraint baseColumnNames="fk_user"
                baseTableName="t_services"
                constraintName="fk_users_services"
                deferrable="true"
                initiallyDeferred="true"
                onDelete="CASCADE"
                onUpdate="RESTRICT"
                referencedColumnNames="id"
                referencedTableName="t_users"/>
    </changeSet>
</databaseChangeLog> 